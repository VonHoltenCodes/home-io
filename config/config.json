{
  "system": {
    "name": "Home-IO",
    "version": "0.2.0",
    "description": "Modular home automation platform",
    "debug": true
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": true,
    "cors_origins": ["*"]
  },
  "database": {
    "path": "data/home_io.db",
    "backup_enabled": true,
    "backup_interval": 86400,
    "backup_count": 7
  },
  "logging": {
    "level": "INFO",
    "file": "data/logs/home_io.log",
    "max_size_mb": 10,
    "backup_count": 5
  },
  "ui": {
    "dashboard_refresh_interval": 30,
    "default_theme": "default",
    "themes": ["default", "night", "retro"],
    "device_widgets": {
      "thermostat": true,
      "light": true,
      "switch": true,
      "sensor": true,
      "camera": true,
      "audio": true
    }
  },
  "plugins": {
    "path": "plugins",
    "enabled": ["zigbee", "zwave", "tuya", "honeywell", "audio"],
    "config": {
      "zigbee": {
        "controller_path": "/dev/ttyUSB0",
        "mqtt_broker": "localhost",
        "mqtt_port": 1883,
        "mqtt_topic_prefix": "zigbee2mqtt",
        "library_mode": "zigbee2mqtt",
        "mock_network": true
      },
      "zwave": {
        "controller_path": "/dev/ttyACM0",
        "mock_network": true
      },
      "tuya": {
        "region": "us",
        "access_id": "",
        "access_key": "",
        "mock_mode": true,
        "devices": ["switch", "light", "thermostat"]
      },
      "honeywell": {
        "client_id": "",
        "client_secret": "",
        "redirect_url": "http://localhost:8000/api/callback/honeywell",
        "mock_mode": true,
        "devices": ["thermostat"]
      },
      "audio": {
        "mock_mode": true,
        "enable_yamaha": false,
        "enable_denon": false,
        "enable_rs232": false,
        "enable_sonos": false,
        "enable_bluesound": false,
        "enable_spotify": false,
        "spotify_client_id": "",
        "spotify_client_secret": "",
        "enable_airplay": false,
        "enable_dlna": false
      }
    }
  },
  "security": {
    "jwt_secret": "change_me_in_production",
    "jwt_expiration": 86400,
    "enable_auth": false
  },
  "integrations": {
    "weather": {
      "provider": "openweathermap",
      "api_key": "",
      "location": "auto",
      "units": "imperial"
    },
    "notifications": {
      "enabled": false,
      "providers": ["email"],
      "email": {
        "smtp_server": "",
        "smtp_port": 587,
        "smtp_user": "",
        "smtp_password": "",
        "from_address": "",
        "to_addresses": []
      }
    }
  }
}